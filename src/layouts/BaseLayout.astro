---
import "@fontsource/inter";
import "@fontsource/inter/500.css";
import "@fontsource/inter/600.css";
import "@fontsource/inter/700.css";
import "@fontsource/inter/800.css";
import "@fontsource/inter/900.css";

export interface Props {
  title: string;
  description?: string;
  image?: string;
  url?: string;
}

import { SEO } from "astro-seo";
import { ClientRouter } from "astro:transitions";
import { Analytics } from '@vercel/analytics/react';
import { SpeedInsights } from '@vercel/speed-insights/react';

// Propiedades con valores por defecto para SEO
const { 
  title = "Nova Devs - Web Development Platform", 
  description = "Custom web and cross-platform application development for international clients.", 
  image = "/default-image.png",
  url = "https://novadevs.com"
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO Meta Tags (Usando astro-seo) -->
    <SEO 
      title={title}
      description={description}
      canonical={url}
      openGraph={{
        basic: {
          title: title,
          type: "website",
          image: image,
          url: url
        },
        optional: {
          description: description
        }
      }}
      twitter={{
        card: "summary_large_image",
        title: title,
        description: description,
        image: image
      }}
    />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Sitemap para indexación -->
    <link rel="sitemap" type="application/xml" href="/sitemap.xml" />

    <!-- Transiciones en navegación -->
    <ClientRouter />
  </head>

  <body>
    <!-- Contenido principal -->
    <main aria-label="Main content">
      <slot />
    </main>
    <Analytics />
    <SpeedInsights />

    <style is:global>
      html {
        font-family: Inter, sans-serif;
        background-color: #26272b;
        color: #ffffff;
        overflow-x: hidden;
        scroll-behavior: smooth !important;
      }
    </style>
  </body>
</html>
