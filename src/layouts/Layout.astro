---
import "@fontsource/inter";
import "@fontsource/inter/500.css";
import "@fontsource/inter/600.css";
import "@fontsource/inter/700.css";
import "@fontsource/inter/800.css";
import "@fontsource/inter/900.css";

export interface Props {
  title: string;
  description?: string;
  image?: string;
  url?: string;
}

import { SEO } from "astro-seo";
import { ClientRouter } from "astro:transitions";
import { Navbar } from "@/components/global/Navbar";
import { Footer } from "@/components/global/Footer";

// Propiedades con valores por defecto para SEO
const { 
  title = "Nova Devs - Web Development Platform", 
  description = "Custom web and cross-platform application development for international clients.", 
  image = "/default-image.png",
  url = "https://novadevs.org"
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO Component -->
    <SEO 
      title={title}
      description={description}
      canonical={url}
      openGraph={{
        basic: {
          title: title,
          type: "website",
          image: image,
          url: url
        },
        image: {
          url: image
        }
      }}
      twitter={{
        card: "summary_large_image",
        title: title,
        description: description,
        image: image
      }}
    />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Sitemap para indexación -->
    <link rel="sitemap" type="application/xml" href="/sitemap.xml" />

    <!-- Transiciones en navegación -->
    <ClientRouter />
  </head>

  <body>
    <!-- Navbar -->
    <Navbar client:load />

    <!-- Contenido principal -->
    <main aria-label="Main content">
      <slot />
    </main>

    <!-- Footer -->
    <Footer client:load />

    <style is:global>
      html {
        font-family: Inter, sans-serif;
        background-color: #26272b;
        color: #ffffff;
        overflow-x: hidden;
        scroll-behavior: smooth !important;
      }
      
      /* Mejora la accesibilidad y la experiencia del usuario */
      a {
        text-decoration: none;
        transition: color 0.3s ease;
      }

      a:hover {
        color: #00ccff;
      }
    </style>
  </body>
</html>
